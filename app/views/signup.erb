<div id="container">
  <div class="container_main">
    <div class="main_img_container">

      <img class="thumbnail" src="/images/castOffWht.png">
    </div>
    <h1>Sign Up! :)</h1>

    <div class="about_content">
      <div class="errors">
            <% if @user.errors.any? %>
                <p> Your sign up form contains the following errors: </p>
                <ol>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ol>
            <% end %>
        </div>


        <form method="POST" action="/validate_signup"> <!-- method="POST" means it will send a POST request and the/signup sends the request to "/signup"-->

            <div class="form-group">
                <input type="text" id="name" name="name" value="<%= @user.name %>" placeholder= "Choose a Unique Username">
            </div>

            <div class="form-group">
                <input type="email" id="email" name="email" value="<%= @user.email %>" placeholder= "e.g. johndoe@email.com"> <!-- the name="email" says when this input gets to the server, identify it by "email"-->
            </div>

            <div class="form-group">
                <input type="password" id="password" name="password" placeholder= "Password">
            </div>

           <div class="form-group">
                <input type="password" name="password_confirmation" placeholder= "Please Retype Your Password">
            </div>

            <div class="form-group">
                <button class="button" type="submit">Signup</button>
            </div>
        </form>
    </div>


  </div>
</div>







